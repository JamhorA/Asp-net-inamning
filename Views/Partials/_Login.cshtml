@model LoginViewModel
<div class="login">
    <div class="container">
        <form asp-action="Index" asp-controller="Login" method="post" id="login-form" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-denger"></div>
            <p>Plase Login to Your Account</p>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" onkeyup="validateEmail(event)">
                <small><span asp-validation-for="Email" class="text-denger"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" onkeyup="validatePassword(event)">
                <small><span asp-validation-for="Password" class="text-denger"></span></small>
            </div>
            <label class="custom-checkbox">
                Plase keep me logged in
                <input type="checkbox" checked="checked">
                <span class="checkmark"></span>
            </label>
            <div class="buttens">
                <button class="btn-theme btn-left" type="submit">Login</button>
                <a asp-controller="account" asp-action="register" class="btn-theme btn-right link">Register</a>
            </div>

        </form>
    </div>

</div>