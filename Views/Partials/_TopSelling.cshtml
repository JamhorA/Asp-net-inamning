@model TopSellingViewModels

<section class="top-selling">
    <div class="container-fluid">
        <h1 class="collection-title">@Model.Title</h1>
        <div class="collection-grid">
            @foreach (var item in Model.GridItems.Take(7))
            {
                <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
            }
            <!-- collection-item end -->
        </div>
        <div class="load-more">
            <button class="btn-outline-white me-1"><i class="fa-solid fa-chevron-left"></i></button>
            <button class="btn-outline-white ms-1"><i class="fa-solid fa-chevron-right"></i></button>
        </div>
    </div>
</section>
